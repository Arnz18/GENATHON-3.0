<% layout("/layouts/boilerplate.ejs") %>
<body>
    <main class="relative z-10">
        <!-- Hero Section -->
        <section id="home" class="min-h-screen flex items-center px-4 lg:px-8">
            <div class="max-w-7xl mx-auto w-full">
                <div class="grid lg:grid-cols-2 gap-12 items-center">
                    <!-- Left Side - Logo and Info -->
                    <div class="text-center lg:text-left">
                        <div class="logo-container mb-8">
                            <h1 class="text-6xl lg:text-8xl font-black tracking-tighter mb-4">
                                GENATHON
                            </h1>
                            <div class="version-number text-4xl lg:text-6xl font-black text-primary-red glow-red">
                                3.0
                            </div>
                        </div>
                        <div class="space-y-4 mb-8">
                            <p class="text-xl lg:text-2xl text-muted-gray">
                                Organized by <span class="text-white font-semibold">Club Elevate, IIIT Nagpur</span>
                            </p>
                            <p class="text-lg lg:text-xl text-primary-red font-medium">
                                February 7–9, 2026
                            </p>
                        </div>
                    </div>
                    
                    <!-- Right Side - Registration Form -->
                    <div class="w-full max-w-md mx-auto lg:mx-0 lg:ml-auto">
                        <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10">
                            <h2 class="text-2xl font-bold mb-6 text-center">Pre-register Now</h2>
                            <form id="registrationForm" class="space-y-4">
                                <div class="grid grid-cols-2 gap-4">
                                    <div>
                                        <input type="text" name="firstName" placeholder="First Name*" required 
                                               class="form-input">
                                    </div>
                                    <div>
                                        <input type="text" name="lastName" placeholder="Last Name*" required 
                                               class="form-input">
                                    </div>
                                </div>
                                <input type="email" name="email" placeholder="Email*" required 
                                       class="form-input">
                                <input type="tel" name="phone" placeholder="Phone Number*" required 
                                       class="form-input">
                                <div class="grid grid-cols-2 gap-4">
                                    <input type="number" name="age" placeholder="Age*" required 
                                           class="form-input">
                                    <select name="level" required class="form-input">
                                        <option value="">Level of Study*</option>
                                        <option value="High School">High School</option>
                                        <option value="Undergraduate">Undergraduate</option>
                                        <option value="Graduate">Graduate</option>
                                        <option value="PhD">PhD</option>
                                        <option value="Professional">Professional</option>
                                    </select>
                                </div>
                                <input type="text" name="college" placeholder="College/Institute*" required 
                                       class="form-input">
                                <input type="url" name="linkedin" placeholder="LinkedIn URL*" required 
                                       class="form-input">
                                <input type="text" name="country" placeholder="Country of Residence*" required 
                                       class="form-input">
                                <button type="submit" class="w-full bg-primary-red hover:bg-red-600 text-white font-bold py-3 px-6 rounded-lg transition-all duration-300 transform hover:scale-105 glow-red-button">
                                    Register Now
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        
        <!-- Statistics Section -->
        <section id="about" class="py-20 relative overflow-hidden">
            <div class="stats-bg absolute inset-0 bg-red-bg transform -skew-y-2"></div>
            <div class="relative z-10 max-w-6xl mx-auto px-4">
                <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 text-center">
                    <div class="stat-item">
                        <div class="text-4xl lg:text-6xl font-black text-white mb-2">5000+</div>
                        <div class="text-lg lg:text-xl font-semibold text-white/90">Registrations</div>
                    </div>
                    <div class="stat-item">
                        <div class="text-4xl lg:text-6xl font-black text-white mb-2">400+</div>
                        <div class="text-lg lg:text-xl font-semibold text-white/90">Participants</div>
                    </div>
                    <div class="stat-item">
                        <div class="text-4xl lg:text-6xl font-black text-white mb-2">120+</div>
                        <div class="text-lg lg:text-xl font-semibold text-white/90">Projects</div>
                    </div>
                    <div class="stat-item">
                        <div class="text-4xl lg:text-6xl font-black text-white mb-2">100+</div>
                        <div class="text-lg lg:text-xl font-semibold text-white/90">Volunteers</div>
                    </div>
                </div>
            </div>
        </section>
        
        <!-- Why Participate Section -->
        <section class="py-20 px-4">
            <div class="max-w-6xl mx-auto">
                <h2 class="text-4xl lg:text-5xl font-bold text-center mb-16">
                    Why Participate in <span class="text-primary-red">Genathon 3.0</span>?
                </h2>
                <div class="grid lg:grid-cols-3 gap-8">
                    <div class="floating-card group">
                        <div class="bg-gradient-to-br from-primary-purple/20 to-primary-purple/5 backdrop-blur-sm rounded-2xl p-8 border border-primary-purple/30 h-full transform transition-all duration-500 hover:scale-105 hover:rotate-1 glow-purple">
                            <div class="w-16 h-16 bg-primary-purple/20 rounded-full flex items-center justify-center mb-6 mx-auto">
                                <svg class="w-8 h-8 text-primary-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                                </svg>
                            </div>
                            <h3 class="text-2xl font-bold text-center mb-4">Collaborate and Skill Up</h3>
                            <p class="text-muted-gray text-center leading-relaxed">
                                Connect with people, form a team, learn new skills and develop amazing projects!
                            </p>
                        </div>
                    </div>
                    
                    <div class="floating-card group">
                        <div class="bg-gradient-to-br from-primary-purple/20 to-primary-purple/5 backdrop-blur-sm rounded-2xl p-8 border border-primary-purple/30 h-full transform transition-all duration-500 hover:scale-105 hover:-rotate-1 glow-purple">
                            <div class="w-16 h-16 bg-primary-purple/20 rounded-full flex items-center justify-center mb-6 mx-auto">
                                <svg class="w-8 h-8 text-primary-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                                </svg>
                            </div>
                            <h3 class="text-2xl font-bold text-center mb-4">Exciting Prizes!</h3>
                            <p class="text-muted-gray text-center leading-relaxed">
                                Top 3 teams plus best projects of each domain will win prizes which will be disclosed soon!
                            </p>
                        </div>
                    </div>
                    
                    <div class="floating-card group">
                        <div class="bg-gradient-to-br from-primary-purple/20 to-primary-purple/5 backdrop-blur-sm rounded-2xl p-8 border border-primary-purple/30 h-full transform transition-all duration-500 hover:scale-105 hover:rotate-1 glow-purple">
                            <div class="w-16 h-16 bg-primary-purple/20 rounded-full flex items-center justify-center mb-6 mx-auto">
                                <svg class="w-8 h-8 text-primary-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                                </svg>
                            </div>
                            <h3 class="text-2xl font-bold text-center mb-4">Engaging Workshops</h3>
                            <p class="text-muted-gray text-center leading-relaxed">
                                Technical workshops and events like no-light event will keep the participants engaged throughout.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        
        <!-- Guidelines Section -->
        <section id="register" class="py-20 px-4">
            <div class="max-w-6xl mx-auto">
                <h2 class="text-4xl lg:text-5xl font-bold text-center mb-16">
                    Guidelines for <span class="text-primary-red">Genathon 3.0</span>
                </h2>
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                    <!-- Register with Ease -->
                    <div class="guideline-item">
                        <div class="w-16 h-16 bg-orange-500 rounded-full flex items-center justify-center mb-6 mx-auto">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-center mb-4">Register with Ease</h3>
                        <p class="text-muted-gray text-center">Pre-registration opens shortly—no red tape, just one click away!</p>
                    </div>
                    
                    <!-- No Prerequisites -->
                    <div class="guideline-item">
                        <div class="w-16 h-16 bg-blue-500 rounded-full flex items-center justify-center mb-6 mx-auto">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-center mb-4">No Prerequisites</h3>
                        <p class="text-muted-gray text-center">Anyone can join, no prerequisites—just bring your creativity!</p>
                    </div>
                    
                    <!-- Form Team -->
                    <div class="guideline-item">
                        <div class="w-16 h-16 bg-primary-purple rounded-full flex items-center justify-center mb-6 mx-auto">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-center mb-4">Form Team</h3>
                        <p class="text-muted-gray text-center">Team up with 2-4 members; join our Discord to find teammates and get the latest updates!</p>
                    </div>
                    
                    <!-- Flexible Teams -->
                    <div class="guideline-item">
                        <div class="w-16 h-16 bg-green-500 rounded-full flex items-center justify-center mb-6 mx-auto">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-center mb-4">Flexible Teams</h3>
                        <p class="text-muted-gray text-center">Add teammates later by submitting an individual application, and they'll be added once approved.</p>
                    </div>
                    
                    <!-- Zero Fees -->
                    <div class="guideline-item">
                        <div class="w-16 h-16 bg-red-500 rounded-full flex items-center justify-center mb-6 mx-auto">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-center mb-4">Zero Fees, Full Perks</h3>
                        <p class="text-muted-gray text-center">No cost to participate, plus free meals and accommodation throughout the event.</p>
                    </div>
                    
                    <!-- Free Food -->
                    <div class="guideline-item">
                        <div class="w-16 h-16 bg-yellow-500 rounded-full flex items-center justify-center mb-6 mx-auto">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 15.546c-.523 0-1.046.151-1.5.454a2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.701 2.701 0 00-1.5-.454M9 6v2m3-2v2m3-2v2M9 3h.01M12 3h.01M15 3h.01M21 21v-7a2 2 0 00-2-2H5a2 2 0 00-2 2v7h18zM3 9a2 2 0 012-2h14a2 2 0 012 2v2H3V9z"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-center mb-4">Free Food</h3>
                        <p class="text-muted-gray text-center">Enjoy complimentary meals, water, and coffee throughout the event.</p>
                    </div>
                </div>
            </div>
        </section>
        
        <!-- FAQ Section -->
        <section id="faq" class="py-20 px-4">
            <div class="max-w-4xl mx-auto text-center">
                <h2 class="text-4xl lg:text-5xl font-bold mb-8">
                    Frequently Asked <span class="text-primary-red">Questions</span>
                </h2>
                <p class="text-xl text-muted-gray mb-12">
                    Have questions? Join our Discord community or reach out to us directly.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="#" class="bg-primary-purple hover:bg-purple-600 text-white font-bold py-3 px-8 rounded-lg transition-all duration-300 transform hover:scale-105">
                        Join Discord
                    </a>
                    <a href="#contact" class="bg-white/10 hover:bg-white/20 text-white font-bold py-3 px-8 rounded-lg transition-all duration-300 transform hover:scale-105">
                        Contact Us
                    </a>
                </div>
            </div>
        </section>
        
        <!-- Contact Section -->
        <section id="contact" class="py-20 px-4">
            <div class="max-w-4xl mx-auto text-center">
                <h2 class="text-4xl lg:text-5xl font-bold mb-8">
                    Get in <span class="text-primary-red">Touch</span>
                </h2>
                <p class="text-xl text-muted-gray mb-12">
                    Ready to be part of Genathon 3.0? Connect with us and stay updated!
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="mailto:contact@clubelevate.com" class="bg-primary-red hover:bg-red-600 text-white font-bold py-3 px-8 rounded-lg transition-all duration-300 transform hover:scale-105 flex items-center justify-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                        Email Us
                    </a>
                    <a href="#" class="bg-white/10 hover:bg-white/20 text-white font-bold py-3 px-8 rounded-lg transition-all duration-300 transform hover:scale-105 flex items-center justify-center gap-2">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.174-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.099.12.112.225.085.346-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.402.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.357-.629-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24.009 12.017 24.009c6.624 0 11.99-5.367 11.99-12.014C24.007 5.367 18.641.001.017 0h.001z"/>
                        </svg>
                        Follow Us
                    </a>
                </div>
            </div>
        </section>
    </main>
    
    <!-- Mobile Menu Button -->
    <button id="mobileMenuBtn" class="fixed bottom-4 right-4 z-50 lg:hidden bg-primary-red text-white p-3 rounded-full shadow-lg">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
    </button>
    
    <!-- Mobile Menu -->
    <div id="mobileMenu" class="fixed inset-0 bg-dark-bg/95 backdrop-blur-sm z-40 lg:hidden hidden">
        <div class="flex flex-col items-center justify-center h-full space-y-8">
            <a href="#home" class="mobile-menu-link text-2xl font-bold text-white hover:text-primary-red transition-colors">Home</a>
            <a href="#about" class="mobile-menu-link text-2xl font-bold text-white hover:text-primary-red transition-colors">About</a>
            <a href="#register" class="mobile-menu-link text-2xl font-bold text-white hover:text-primary-red transition-colors">Register</a>
            <a href="#faq" class="mobile-menu-link text-2xl font-bold text-white hover:text-primary-red transition-colors">FAQ</a>
            <a href="#contact" class="mobile-menu-link text-2xl font-bold text-white hover:text-primary-red transition-colors">Contact</a>
        </div>
    </div>
    
    <!-- Success Modal -->
    <div id="successModal" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 items-center justify-center hidden">
        <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 border border-white/20 max-w-md mx-4">
            <div class="text-center">
                <div class="w-16 h-16 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                </div>
                <h3 class="text-2xl font-bold text-white mb-4">Registration Successful!</h3>
                <p class="text-muted-gray mb-6">Thank you for registering for Genathon 3.0. We'll be in touch soon!</p>
                <button id="closeModal" class="bg-primary-red hover:bg-red-600 text-white font-bold py-2 px-6 rounded-lg transition-colors">
                    Close
                </button>
            </div>
        </div>
    </div>
    
</body>
